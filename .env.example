# ===================
# J-Innov Environment Variables
# Copy this file to .env and fill in the values
# ===================

# ===================
# JWT Configuration (REQUIRED)
# ===================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=24h

# ===================
# Admin Account (REQUIRED)
# ===================
ADMIN_EMAIL=admin@j-innov.com
ADMIN_PASSWORD=YourSecureAdminPassword123!

# ===================
# CORS Configuration
# ===================
CORS_ORIGIN=http://localhost:3000

# ===================
# Password Hashing
# ===================
BCRYPT_SALT_ROUNDS=12

# ===================
# Upload Configuration
# ===================
MAX_UPLOAD_MB=100

# ===================
# IONOS S3 Configuration (REQUIRED)
# ===================
S3_ENDPOINT=https://s3.eu-central-1.ionoscloud.com
S3_REGION=eu-central-1
S3_ACCESS_KEY=your-ionos-access-key
S3_SECRET_KEY=your-ionos-secret-key
S3_BUCKET=j-innov-files
S3_FORCE_PATH_STYLE=true

# ===================
# Download Configuration
# ===================
# Options: "presigned" (redirect to S3 URL) or "proxy" (stream through backend)
DOWNLOAD_MODE=presigned
SIGNED_URL_EXPIRES_SECONDS=3600

# ===================
# Frontend Configuration
# ===================
VITE_API_URL=http://localhost:3001
